<h1><%= @customer.last_name + @customer.first_name %>さんの会員詳細</h1>
<table>
  <tr>
    <td>会員ID</td>
    <td>
      <%= @customer.id %>
    </td>
  </tr>
  <tr>
    <td>氏名</td>
    <td>
      <%= @customer.last_name %>
      <%= @customer.first_name %>
    </td>
  </tr>
  <tr>
    <td>カナ</td>
    <td>
      <%= @customer.last_name_kana %>
      <%= @customer.first_name_kana %>
    </td>
  </tr>
  <tr>
    <td>郵便番号</td>
    <td>
      <%= @customer.postcode %>
    </td>
  </tr>
  <tr>
    <td>住所</td>
    <td>
      <%= @customer.address %>
    </td>
  </tr>
  <tr>
    <td>電話番号</td>
    <td>
      <%= @customer.tel %>
    </td>
  </tr>
  <tr>
    <td>メールアドレス</td>
    <td>
      <%= @customer.email %>
    </td>
  </tr>
  <tr>
    <td>会員ステータス</td>
    <td>
      <%= @customer.withdrawal_status ? "退会" : "有効" %>
    </td>
  </tr>
</table>

<%= link_to "編集する", edit_admin_customer_path(@customer.id) %>

<%= link_to "注文履歴一覧を見る", admin_order_path(@customer.id) %>