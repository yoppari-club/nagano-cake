<div class="container mt-5 mb-5">
    <h2>マイページ</h2>
  <div class="row mx-auto mb-2">
    <h3>登録情報</h3>
    <%= link_to "編集する", edit_customers_path, class:"btn btn-success mx-4 px-4" %>
  </div>
    
  <div class="col-8 mx-auto">
    <table class="table table-bordered border-dark border-3" >
      <tr>
        <td>氏名</td>
        <td>
          <%= @customer.last_name %>
          <%= @customer.first_name %>
        </td>
      </tr>
      <tr>
        <td>カナ</td>
        <td>
          <%= @customer.last_name_kana %>
          <%= @customer.first_name_kana %>
        </td>
      </tr>
      <tr>
        <td>郵便番号</td>
        <td>
          <%= @customer.postcode %>
        </td>
      </tr>
      <tr>
        <td>住所</td>
        <td>
          <%= @customer.address %>
        </td>
      </tr>
      <tr>
        <td>電話番号</td>
        <td>
          <%= @customer.tel %>
        </td>
      </tr>
      <tr>
        <td>メールアドレス</td>
        <td>
          <%= @customer.email %>
        </td>
      </tr>
    </table>
  </div>
  <div class="row mx-auto mb-2">
    <h3 class="col-2">配送先</h3>
    <%= link_to "一覧を見る", shipping_addresses_path, class:"btn btn-primary mx-4 px-4" %>
  </div>
  <div class="row mx-auto">
    <h3 class="col-2">注文履歴</h3>
    <%= link_to "一覧を見る", orders_path, class:"btn btn-primary mx-4 px-4" %>
  </div>
</div>