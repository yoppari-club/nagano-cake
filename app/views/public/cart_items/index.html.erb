<div class="container">
  <div class="row my-3">
    <div class="col-sm-8 px-sm-0 offset-sm-1">
      <h2>ショッピングカート</h2>
    </div>
    <% unless @cart_items.empty? %>
    <div class="col-sm-2 px-sm-0">
      <%= link_to "カートを空にする", cart_items_destroy_all_path, class: "btn btn-danger float-right", method: :delete, data: { confirm: '削除しますか？' } %>
    </div>
    <% end %>
  </div>

  <% if @cart_items.empty? %>
    <div style="height: 200px;"></div>
    <div class="text-center">
      <h2>カートに商品が入っておりません</h2>
      <%= link_to "買い物を続ける", root_url, class: "btn btn-primary" %>
    </div>
    <div style="height: 200px;"></div>

  <% else %>
  <div class="row">
    <div class="col-sm-10 px-sm-0 mx-auto">
      <table class="table table-bordered ">
        <thead>
          <tr>
            <th class="table-active">商品名</th>
            <th class="table-active">単価(税込み)</th>
            <th class="table-active">数量</th>
            <th class="table-active">小計</th>
            <th class="table-active"></th>
          </tr>
        </thead>
        <tbody>
          <% @total_amount = 0 %>
          <% @cart_items.each do |cart_item| %>
            <tr>
              <td class="align-middle"><%= attachment_image_tag cart_item.item, :image, format: 'jpeg', fallback: "no_image.jpg", size: "50x50" %><%= cart_item.item.name %></td>
              <td class="align-middle"><%= change_price_excluding_tax(cart_item.item.price_excluding_tax).to_s(:delimited) %></td>
              <td class="align-middle">
                <%= form_with model: cart_item, local: true do |f| %>
                  <%= f.number_field :amount, in: 1..999, step: 1 %>
                  <%= f.submit "変更", class: "btn btn-success" %>
                <% end %>
              </td>
              <td class="align-middle"><%= (amount = change_price_excluding_tax(cart_item.item.price_excluding_tax * cart_item.amount)).to_s(:delimited) %></td>
              <td class="align-middle text-center"><%= link_to "削除する", cart_item_path(cart_item), class: "btn btn-danger", method: :delete, data: { confirm: '削除しますか？' } %></td>
            </tr>
            <% @total_amount += amount %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <div class="row mt-3">
    <div class="col-sm-6 px-sm-0 offset-sm-2">
      <%= link_to "買い物を続ける", root_url, class: "btn btn-primary" %>
    </div>
    <div class="col-sm-3 px-sm-0">
      <table class="table table-bordered">
        <tr><th class="table-active" style="width:50%">合計金額</td><td style="width:50%"><%= @total_amount.to_s(:delimited) %></td></tr>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-2 px-sm-0 mx-auto text-center mb-3">
      <%= link_to "情報入力へ進む", new_order_path, class: "btn btn-success" %>
    </div>
  </div>
  <% end %>
</div>

